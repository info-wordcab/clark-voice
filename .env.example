# Clark Receptionist (Pipecat Voice Bot) Environment Variables
# Copy this to .env for local development

# =============================================================================
# Django Integration (Required for Twilio calls)
# =============================================================================

# Webhook URL for sending call events to Django
# Local dev: Use ngrok URL for Django
WEBHOOK_URL=https://your-django-ngrok.ngrok.app/api/telephony/pipecat/event

# Django API URL for fetching business config
# Local dev: Use ngrok URL for Django
DJANGO_INTERNAL_URL=https://your-django-ngrok.ngrok.app

# =============================================================================
# Twilio (Required for phone calls)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# =============================================================================
# STT Provider (Speech-to-Text) - Choose one
# =============================================================================
# Options: "deepgram" or "assemblyai"
STT_PROVIDER=assemblyai

# Deepgram (if STT_PROVIDER=deepgram)
DEEPGRAM_API_KEY=

# AssemblyAI (if STT_PROVIDER=assemblyai)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# =============================================================================
# LLM Configuration - Hierarchical Fallback
# =============================================================================
# Configure primary, secondary, and fallback LLM providers.
# Values can be: "sambanova", "google", or "openai"
# PRIMARY_LLM is required. SECONDARY_LLM and FALLBACK_LLM are optional.
# On rate limit (429) errors, automatically switches to next provider.

PRIMARY_LLM=sambanova
SECONDARY_LLM=google
FALLBACK_LLM=openai

# API Keys - set keys for each provider you want to use
SAMBANOVA_API_KEY=
GOOGLE_API_KEY=
OPENAI_API_KEY=

# Models per provider (optional, have defaults)
SAMBANOVA_MODEL=Llama-4-Maverick-17B-128E-Instruct
GOOGLE_MODEL=gemini-2.0-flash
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# TTS Provider (Text-to-Speech) - Choose one
# =============================================================================
# Options: "inworld" or "cartesia"
TTS_PROVIDER=inworld

# Inworld (if TTS_PROVIDER=inworld)
INWORLD_API_KEY=your_inworld_api_key
INWORLD_VOICE_ID=Ashley
INWORLD_MODEL=inworld-tts-1

# Cartesia (if TTS_PROVIDER=cartesia)
CARTESIA_API_KEY=
CARTESIA_VOICE_ID=

# =============================================================================
# VAD Configuration (Voice Activity Detection)
# =============================================================================
# How long to wait after speech stops before processing (seconds)
VAD_STOP_SECS=0.2
